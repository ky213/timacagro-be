{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "index.ts", "codegen.ts"],
  "exclude": ["node_modules/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
